{
  "name": "podcast-human-syncer",
  "description": "sync humans during a podcast",
  "main": "server.js",
  "author": "Oli Zimpasser",
  "private": false,
  "license": "Apache-2.0",
  "version": "1.0.0",
  "scripts": {
    "dev": "node server.js",
    "build": "sapper build",
    "start": "cross-env NODE_ENV=production node server.js",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "glob": "^7.1.2",
    "js-cookie": "^2.2.0",
    "node-fetch": "^1.7.3",
    "sapper": "^0.5.0",
    "serve-static": "^1.13.1",
    "socket.io": "^2.0.4",
    "uglifyjs-webpack-plugin": "^1.1.5"
  },
  "devDependencies": {
    "css-loader": "^0.28.7",
    "cross-env": "^5.1.3",
    "npm-run-all": "^4.1.2",
    "style-loader": "^0.19.1",
    "svelte": "^1.51.1",
    "svelte-loader": "^2.3.3",
    "webpack": "^3.10.0"
  },
  "node_deb": {
    "init": "systemd",
    "install_strategy": "npm-install",
    "entrypoints": {
      "daemon": "server.js"
    },
    "templates": {
      "default_variables": "build/default",
      "systemd_service": "build/systemd.service"
    }
  }
}
